                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 14 %>][quarter]"
                  value="<%= q[0] %>"></td>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 14 %>][year]"
                  value="<%= q[1] %>"></td>
                <td><input type="text" name="balance[metrics_attributes][<%= q_i + 14 %>][value]"></td>
              <% end %>
            </tr>
            <tr>
              <td>Quantity Preferred Stock</td>
              <% @quarters.each_with_index do |q, q_i| %>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 11 %>][name]"
                  value="preferred_quantity"></td>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 11 %>][quarter]"
                  value="<%= q[0] %>"></td>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 11 %>][year]"
                  value="<%= q[1] %>"></td>
                <td><input type="text" name="balance[metrics_attributes][<%= q_i + 11 %>][value]"></td>
              <% end %>
            </tr>
            <tr>
              <td>Average Treasury Stock Price</td>
              <% @quarters.each_with_index do |q, q_i| %>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 15 %>][name]"
                  value="treasury_price"></td>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 15 %>][quarter]"
                  value="<%= q[0] %>"></td>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 15 %>][year]"
