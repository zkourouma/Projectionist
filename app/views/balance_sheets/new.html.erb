<html>
  <head>
    <title>New BS</title>
  </head>

  <body>
    <%= render :partial => "shared/logoutheader" %>

    <section>
      <div class="new-BS-form">
        <h2>New Balance Sheet</h2><br>
        <form action="<%= user_company_balance_sheet_url %>" method="post">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <table>
            <tr>
              <th>Line item</th>
              <% @quarters.each_with_index do |quarter, q_i| %>
                <th></th>
                <th></th>
                <th></th>
                <th><%= "#{@quarters[q_i][0]}Q#{@quarters[q_i][1]}" %></th>
              <% end %>
            </tr>
            <tr>
              <td><h3>Assets</h3></td>
            </tr>
            <tr>
              <td>Cash</td>
              <% @quarters.each_with_index do |q, q_i| %>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i %>][name]"
                  value="cash"></td>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i %>][quarter]"
                  value="<%= q[0] %>"></td>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i %>][year]"
                  value="<%= q[1] %>"></td>
                <td><input type="text" name="balance[metrics_attributes][<%= q_i %>][value]"></td>
              <% end %>
            </tr>
            <tr>
              <td>Accounts Receivable</td>
              <% @quarters.each_with_index do |q, q_i| %>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 1 %>][name]"
                  value="receivables"></td>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 1 %>][quarter]"
                  value="<%= q[0] %>"></td>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 1 %>][year]"
                  value="<%= q[1] %>"></td>
                <td><input type="text" name="balance[metrics_attributes][<%= q_i + 1 %>][value]"></td>
              <% end %>
            </tr>
            <tr>
              <td>Inventory</td>
              <% @quarters.each_with_index do |q, q_i| %>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 2 %>][name]"
                  value="inventory"></td>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 2 %>][quarter]"
                  value="<%= q[0] %>"></td>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 2 %>][year]"
                  value="<%= q[1] %>"></td>
                <td><input type="text" name="balance[metrics_attributes][<%= q_i + 2 %>][value]"></td>
              <% end %>
            </tr>
            <tr>
              <td>Long Term Investments</td>
              <% @quarters.each_with_index do |q, q_i| %>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 3 %>][name]"
                  value="lti"></td>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 3 %>][quarter]"
                  value="<%= q[0] %>"></td>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 3 %>][year]"
                  value="<%= q[1] %>"></td>
                <td><input type="text" name="balance[metrics_attributes][<%= q_i + 3 %>][value]"></td>
              <% end %>
            </tr>
            <tr>
              <td>Property, Plant & Equipment</td>
              <% @quarters.each_with_index do |q, q_i| %>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 4 %>][name]"
                  value="ppe"></td>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 4 %>][quarter]"
                  value="<%= q[0] %>"></td>
                <td><input type="hidden" name="balance[metrics_attributes][<%= q_i + 4 %>][year]"
                  value="<%= q[1] %>"></td>
                <td><input type="text" name="balance[metrics_attributes][<%= q_i + 4 %>][value]"></td>
              <% end %>
