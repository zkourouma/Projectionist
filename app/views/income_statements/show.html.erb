<head>
<script type="text/javascript">
  function drawVisualization() {
    var data = new google.visualization.DataTable();
    data.addColumn('string', 'Quarter');

    gon.columns.forEach(function(item, index, array) {
      if(index % 2 === 0){
        data.addColumn(item[0], item[1]);
      }
      else{
        data.addColumn({type: item[0], role: item[1]});
      }
    });
    
    data.addRows(gon.details);        

    var options = {
      title : 'Income Statement',
      hAxis: {title: "Quarter"},
      seriesType: "bars"
    };

    var chart = new google.visualization.ColumnChart(document.getElementById('chart_div'));
    chart.draw(data, options);
  }
  google.setOnLoadCallback(drawVisualization);
</script>
</head>
<body>
  <%= render :partial => 'shared/logoutheader' %>
  <%= render :partial => 'shared/sidebar', locals: {projects: @projects} %>
  <section class="statement-show group">
    <form action="<%= new_user_project_url %>" method="get">
      <button type="submit" id="new_project_button">Create New Project</button>
    </form>

    <article class="statement-content group">
      <div class="statement-ttm">
        <table>
          <tr>
            <th>Line item</th>
            <% @quarters.reverse.each_with_index do |quarter, q_i| %>
              <th><%= "#{quarter[0]}Q#{quarter[1]}" %></th>
            <% end %>
          </tr>
          <% @metric_tree.each do |item, details| %>
            <% next unless IncomeStatement.relevant.has_value?(item) %>
            <tr>
              <td><%= item %></td>
              <% @quarters.reverse.each_with_index do |q, q_i| %>
                <td><% if details[q[1]][q[0]] %>
                      <%= details[q[1]][q[0]].value.round(1) %>
                    <% else %>
                    0
                    <% end %></td>
              <% end %>
            </tr>
          <% end %>
        </table>
      <div id="chart_div"></div>
      </div>
      <div class="meta-ttm">
        <table>
          <tr>
            <th>Composite</th>
            <% @quarters.reverse.each_with_index do |quarter, q_i| %>
              <th><%= "#{quarter[0]}Q#{quarter[1]}" %></th>
            <% end %>
          </tr>
          <tr>
            <td>Gross Profit</td>
            <% @quarters.reverse.each_with_index do |q, q_i| %>
              <td><%= @income.gross_profit(@metric_tree, q[0], q[1]).round(1) %></td>
            <% end %>
          </tr>
          <tr>
            <td>Operating Profit</td>
            <% @quarters.reverse.each_with_index do |q, q_i| %>
              <td><%= @income.operating_profit(@metric_tree, q[0], q[1]).round(1) %></td>
            <% end %>
          </tr>
          <tr>
            <td>EBITDA</td>
            <% @quarters.reverse.each_with_index do |q, q_i| %>
              <td><%= @income.ebitda(@metric_tree, q[0], q[1]).round(1) %></td>
            <% end %>
          </tr>
          <tr>
            <td>Net Income</td>
            <% @quarters.reverse.each_with_index do |q, q_i| %>
              <td><%= @income.net_income(@metric_tree, q[0], q[1]).round(1) %></td>
            <% end %>
          </tr>
          <tr>
            <td>EPS</td>
            <% @quarters.reverse.each_with_index do |q, q_i| %>
              <td><%= @income.eps(@metric_tree, q[0], q[1]).round(2) %></td>
            <% end %>
          </tr>
          <tr>
            <td>Gross Margin</td>
            <% @quarters.reverse.each_with_index do |q, q_i| %>
              <td><%= (@income.gross_margin(@metric_tree, q[0], q[1]) * 100).round(1) %>%</td>
            <% end %>
          </tr>
          <tr>
            <td>Operating Margin</td>
            <% @quarters.reverse.each_with_index do |q, q_i| %>
              <td><%= (@income.operating_margin(@metric_tree, q[0], q[1]) * 100).round(1) %>%</td>
            <% end %>
          </tr>
          <tr>
            <td>EBITDA Margin</td>
            <% @quarters.reverse.each_with_index do |q, q_i| %>
              <td><%= (@income.ebitda_margin(@metric_tree, q[0], q[1]) * 100).round(1) %>%</td>
            <% end %>
          </tr>
        </table>
      </div>
      <% unless @assumptions.empty? %>
      <div class="assumptions">
        <ul><strong>Assumptions</strong><br>
          <% @assumptions.each do |assume| %>
            <% if assume.assumption_type == "growth" %>
              <li> <%= assume.value*100 %>% <%= assume.time_unit %>/<%= assume.time_unit %>
                <%= assume.name %> growth</li>
            <% else %>
            <li>
              <% if assume.value > 1.001 %>
                $<%= assume.value %>mm in <%= assume.name %> per
                <%= assume.time %>
              <% else %>
                <%= assume.value*100 %>% in <%= assume.name %> per
                <%= assume.time %>
              <% end %>
            </li>
            <% end %>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="pseudo-nav">
        <a href="<%= add_user_company_income_statement_url %>"
          id="add_year_link">Add year</a><br>
        <form action="<%= edit_user_company_income_statement_url %>" method="get"
          class="edit-button">
          Edit
          <label>Quarter<input type="number" name="quarter"></label>
          <label>Year<input type="number" name="year"></label>
          <input type="submit" value="Edit Q" style='margin-top:-2px'></form><br>

        <div class="financials">
          <strong>Financials</strong><br>
          <ul>
            <li><%= link_to "Balance Sheet", user_company_balance_sheet_url %></li>
            <li><%= link_to "Cash Flow Statement", user_company_cash_flow_url %></li>
          </ul>
        </div>
        <br><%= link_to "Back", :back %>
      </div>
    </article>
  </section>
</body>