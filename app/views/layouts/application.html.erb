<!DOCTYPE html>
<html>
<head>
  <title>Projectionist</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notices] %>
  <% flash[:notices].count.times do |i| %>
    <%= flash[:notice].shift %>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>
