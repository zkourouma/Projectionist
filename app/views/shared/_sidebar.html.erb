<ul class="sidebar group">
    <div class="projects-index">
    <% unless projects.nil? %>
      <strong>Projects</strong>
      <ul>
        <% projects.each do |project| %>
          <li><%= link_to project.name, user_project_url(project) %></li>
        <% end %>
      </ul>
    <% else %>
      <a href="<%= new_user_project_url %>">Add Project</a>
    <% end %>
  </div>
  <li><a href="<%= edit_user_url %>">Edit My Profile</a></li>
  <li><a href="<%= edit_user_company_url %>">Edit Company</a></li>
</ul>